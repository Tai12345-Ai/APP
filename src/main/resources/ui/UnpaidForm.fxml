<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fx.login.controller.UnpaidFormController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <children>
   
       <Label text="Tên chủ hộ" GridPane.columnIndex="0" GridPane.rowIndex="0" />
       <TextField fx:id="residentName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
   
       <Label text="Căn hộ" GridPane.columnIndex="0" GridPane.rowIndex="1" />
       <TextField fx:id="apartmentName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
       <Label text="Số tiền còn thiếu" GridPane.columnIndex="0" GridPane.rowIndex="2" />
       <TextField fx:id="totalPayment" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
       <Label text="Hạn nộp" GridPane.columnIndex="0" GridPane.rowIndex="3" />
       <TextField fx:id="dueDate" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
       <Button onAction="#onSave" text="Lưu" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
