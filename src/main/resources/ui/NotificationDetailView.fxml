<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="10"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fx.login.controller.NotificationDetailController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Chi tiết thông báo" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="150"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="600"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30" prefHeight="30"/>
                <RowConstraints minHeight="30" prefHeight="30"/>
                <RowConstraints minHeight="30" prefHeight="30"/>
                <RowConstraints minHeight="30" prefHeight="30"/>
                <RowConstraints minHeight="30" prefHeight="30"/>
                <RowConstraints minHeight="100" prefHeight="120"/>
                <RowConstraints minHeight="30" prefHeight="30"/>
                <RowConstraints minHeight="30" prefHeight="30"/>
            </rowConstraints>

            <Label text="ID thông báo:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="detail-label"/>
            <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="detail-value"/>

            <Label text="Thời gian gửi:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="detail-label"/>
            <Label fx:id="sentAtLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="detail-value"/>

            <Label text="Người gửi:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="detail-label"/>
            <Label fx:id="senderLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="detail-value"/>

            <Label text="Người nhận:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="detail-label"/>
            <Label fx:id="recipientLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="detail-value"/>

            <Label text="Loại thông báo:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="detail-label"/>
            <Label fx:id="typeLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="detail-value"/>
        </GridPane>
    </children>
</VBox>
